<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo Registro de Historial Clínico"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Fecha"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enfermedad o Condición"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etEnfermedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la enfermedad"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Síntomas"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etSintomas"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Descripción de síntomas"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tratamiento"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etTratamiento"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Descripción del tratamiento"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerEstado"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observaciones"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etObservaciones"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Observaciones adicionales"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/guardar"
                android:backgroundTint="@color/primary"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancelar"
                android:backgroundTint="#757575"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
