<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EstadÃ­sticas Generales"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTotalAnimales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total de Animales: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvAnimalesSanos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Animales Sanos: 0"
                    android:textSize="16sp"
                    android:textColor="@color/estado_sano"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvAnimalesEnfermos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Animales Enfermos: 0"
                    android:textSize="16sp"
                    android:textColor="@color/estado_enfermo"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvAnimalesVendidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Animales Vendidos: 0"
                    android:textSize="16sp"
                    android:textColor="@color/estado_vendido"
                    android:layout_marginBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginVertical="8dp"/>

                <TextView
                    android:id="@+id/tvTotalGastos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total de Gastos: $0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvPromedioGastos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Promedio por Animal: $0.00"
                    android:textSize="16sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnGenerarPDF"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Generar Reporte PDF"
            android:textSize="18sp"
            android:backgroundTint="@color/primary"/>

    </LinearLayout>

</ScrollView>
